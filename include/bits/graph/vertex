#ifndef _POLLIB_GRAPH_VERTEX
#define _POLLIB_GRAPH_VERTEX 1

#pragma GCC system_header

#include <polaris/version>

namespace polaris
{

template<typename _Tp = void>
class vertex;

template<typename _Tp>
std::istream&
operator >> (std::istream& __in, vertex<_Tp>& __e);

template<typename _Tp>
std::ostream&
operator << (std::ostream& __out, const vertex<_Tp>& __e);

}

#include <polaris/bits/graph/vertex.h>
#include <polaris/bits/graph/vertex.tcc>

#endif /* _POLLIB_GRAPH_VERTEX */
