/** @file     container
 *  @brief    Container library
 *  @author   Polaris Zhao
 *  @version  3.0
 *  @todo     Revision.
 *
 *  This is a Polaris C++ Library header.
**/

#ifndef _POLLIB_CONTAINER
#define _POLLIB_CONTAINER 1

#pragma GCC system_header

// Support headers
#include <polaris/version>
// #include <polaris/concepts>

// Standard containers
#if !_POL_NO_STD_CONTAINER

// Standard sequence containers
#if !_POL_NO_STD_SEQUENCE_CONTAINER
#include <array>
#include <deque>
#include <forward_list>
#include <list>
#include <vector>
#endif

// Standard associative containers
#if !_POL_NO_STD_ASSOCIATIVE_CONTAINER
#include <map>
#include <set>
#endif

// Standard unordered containers
#if !_POL_NO_STD_UNORDERED_CONTAINER
#include <unordered_map>
#include <unordered_set>
#endif

// Standard container adaptors
#if !_POL_NO_STD_CONTAINER_ADAPTOR
#include <queue>
#include <stack>
#endif

#endif /* !_POL_NO_STD_CONTAINER */

// Library containers
#include <polaris/sequence>
#include <polaris/matrix>

#endif /* _POLLIB_CONTAINER */
