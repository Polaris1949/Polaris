/** @file     memory
 *  @brief    Memory managing
 *  @author   Polaris Zhao
 *  @version  3.0
 *
 *  This is a Polaris C++ Library header.
**/

#ifndef _POLLIB_MEMORY
#define _POLLIB_MEMORY 1

#pragma GCC system_header

#include <polaris/version>
#include <memory>
#include <experimental/memory>

namespace polaris
{

template<typename _Tp, typename _Del = std::default_delete<_Tp>>
using unique_ptr = std::unique_ptr<_Tp, _Del>;

template<typename _Tp>
using shared_ptr = std::shared_ptr<_Tp>;

template<typename _Tp>
using weak_ptr = std::weak_ptr<_Tp>;

template<typename _Tp>
using observer_ptr = std::experimental::observer_ptr<_Tp>;

}

#include <polaris/allocator>
#include <polaris/bits/bitaddr.h>
#include <polaris/bits/bitaddr.tcc>

#endif /* _POLLIB_MEMORY */
