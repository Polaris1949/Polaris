/** @file     include/version
 *  @brief    Library version and configurations
 *  @author   Polaris Zhao
 *  @version  3.0
 *
 *  This is a Polaris C++ Library header.
**/

#ifndef _POLLIB_VERSION
#define _POLLIB_VERSION 1

#pragma GCC system_header

#define __POLLIB__ 3 ///< Major version of the library
#define __POLLIB_MINOR__ 0 ///< Minor version of the library
#define __POLLIB_PATCHLEVEL__ 4 ///< Patch level of the library

#if __cplusplus < 201703L
#error polaris library generally need c++17 or later versions
#endif

#if __has_include(<version>)
#include <version> // C++20
#else
#include <iosfwd> // Workaround
#endif

/** @namespace  polaris
 *  @brief      Library namespace
**/
namespace polaris {}

#ifndef POL_NAMESPACE_ALIAS
#define POL_NAMESPACE_ALIAS 1
#endif

#if POL_NAMESPACE_ALIAS
/** @namespace pol
 *  @brief     Short namespace alias for the library
**/
namespace pol = polaris;
#endif

#endif /* _POLLIB_VERSION */
