/** @file filemgr
 *  This is a Polaris C++ Library header.
 */

// Disclaimer: This library is current in early development. There may
// be several bugs.

// Written by Jingyu Zhao.

#ifndef _POLLIB_FILEMGR
#define _POLLIB_FILEMGR 1

#include <fstream>
#include <string>
#include <vector>

namespace polaris
{

typedef std::fstream& file_handle;

class filemgr
{
public:
	typedef std::vector<std::fstream> conatiner_type;
	
private:
	std::vector<std::fstream> _M_mgr;
	
public:
	filemgr();
	file_handle open(const std::string& __arg, \
		std::ios_base::openmode __mode = std::ios_base::in | \
		std::ios_base::out);
	void close();
	void clear();
};

filemgr::
filemgr()
	: _M_mgr()
{
}

file_handle
filemgr::
open(const std::string& __arg, std::ios_base::openmode __mode)
{
	_M_mgr.emplace_back(__arg, __mode);
	return _M_mgr.back();
}

void
filemgr::
close()
{
	_M_mgr.pop_back();
}

void
filemgr::
clear()
{
	_M_mgr.clear();
}

}

#endif /* _POLLIB_FILEMGR */
